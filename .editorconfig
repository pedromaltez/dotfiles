# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.zsh]
indent_style = space
indent_size = 2

[*.vim]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

